<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:db="clr-namespace:LayoutCycleExceptionRepro1"
             xmlns:v="clr-namespace:LayoutCycleExceptionRepro1"
             xmlns:ctrl="clr-namespace:LayoutCycleExceptionRepro1"
             x:Class="LayoutCycleExceptionRepro1.KeysListApplet"
             x:DataType="v:KeysListApplet"
             x:Name="root"
             BackgroundColor="DimGray">
    <ContentView.Content>
        <ContentView x:Name="MainContentView">
            <Grid x:Name="MainGrid"
                  RowDefinitions="40,*"
                  ColumnDefinitions="1*,2*">

                <CollectionView Grid.Row="1"
                                Grid.Column="0"
                                ItemsSource="{Binding KeyGroups}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Border>
                                <Label Text="{Binding .}" />
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ContentView>
    </ContentView.Content>
</ContentView>



