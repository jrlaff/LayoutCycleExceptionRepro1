<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:ctrl="clr-namespace:LayoutCycleExceptionRepro1"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutCycleExceptionRepro1.MainPage">

    <Grid x:Name="MainGrid"
          RowDefinitions="40, *"
          ColumnDefinitions="Auto, 30, Auto, Auto, *"
          ColumnSpacing="10">

        <Entry x:Name="ScreensCount"
               Text="5"
               Grid.Row="0"
               Grid.Column="0" />
        <CheckBox x:Name="ScreensVisible"
                  IsChecked="true"
                  Grid.Row="0"
                  Grid.Column="1" />
        <Label Text="All visible"
               VerticalTextAlignment="Center"
               Grid.Row="0"
               Grid.Column="2" />
        <Button Text="Add screens"
                Grid.Row="0"
                Grid.Column="3"
                Pressed="Button_Pressed" />

        <Grid x:Name="ScreensContainer"
              Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="5" />
    </Grid>

</ContentPage>
